<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0" assembly="ClearCanvas.Dicom.Services" namespace="ClearCanvas.Dicom.Services">
  <class name="Patient" proxy="Patient" table="Patient_">
    <id name="Oid" column="Oid_" type="Int64">
      <generator class="hilo">
        <param name="max_lo">100</param>
      </generator>
    </id>
    <version name="Version" column="Version"/>
    <property name="PatientId" column="PatientId_" type="String" length="20"/>
    <property name="PatientsName" column="PatientsName_" type="String" length="1024"/>
    <property name="PatientsBirthDate" column="PatientsBirthDate_" type="DateTime"/>
	<property name="PatientsSex" column="PatientsSex_" type="String" length="1"/>
    <set name="Studies" lazy="true" inverse="true" cascade="all-delete-orphan" access="nosetter.camelcase-underscore">
      <key column="PatientOid_" />
      <one-to-many class="Study" />
    </set>
  </class>
</hibernate-mapping>
