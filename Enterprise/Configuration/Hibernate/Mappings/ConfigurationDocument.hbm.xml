<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ClearCanvas.Enterprise.Configuration" namespace="ClearCanvas.Enterprise.Configuration">
  <class name="ConfigurationDocument" table="ConfigurationDocument_">
    <cache usage="nonstrict-read-write"/>
    <id name="OID" column="OID_" type="Guid">
      <generator class="guid.comb"/>
    </id>
    <version name="Version" column="Version_"/>
    
    <property name="DocumentName" type="String" length="1000" not-null="true">
      <column name="DocumentName_" unique-key="DocumentKey"/>
    </property>
    <property name="DocumentVersionString" type="String" length="30" not-null="true">
      <column name="DocumentVersionString_" unique-key="DocumentKey"/>
    </property>
    <property name="User" type="String" length="200" not-null="false">
      <column name="User_" unique-key="DocumentKey"/>
    </property>
    <property name="InstanceKey" type="String" length="1000" not-null="false">
      <column name="InstanceKey_" unique-key="DocumentKey"/>
    </property>
    <one-to-one name="Body" class="ConfigurationDocumentBody" cascade="all"/>
  </class>
</hibernate-mapping>
