<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ClearCanvas.Enterprise.Configuration" namespace="ClearCanvas.Enterprise.Configuration">
  <class name="ConfigurationDocument" table="ConfigurationDocument_">
    <!-- Instances of this class are essentially immutable once created, therefore can be cached as read-only -->
    <!--<cache usage="read-only"/>-->
    <id name="OID" column="OID_" type="Guid">
      <generator class="guid.comb"/>
    </id>
    <version name="Version" column="Version_"/>
    <property name="DocumentName" column="DocumentName_" type="String" length="1000" not-null="true"/>
    <property name="DocumentVersionString" column="DocumentVersionString_" type="String" length="30" not-null="true"/>
    <property name="User" column="User_" type="String" length="200" not-null="false"/>
    <property name="InstanceKey" column="InstanceKey_" type="String" length="1000" not-null="false"/>
    <one-to-one name="Body" class="ConfigurationDocumentBody" cascade="all"/>
  </class>
</hibernate-mapping>
