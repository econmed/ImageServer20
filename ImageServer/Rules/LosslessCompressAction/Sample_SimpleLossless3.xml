<!-- 
This rule instructs the server to schedule lossless compression 
for MR or CT studies. The compression will occur in 2 years after the study date.
-->
<rule>
	<condition expressionLanguage="dicom">
		<or>
			<equal
			  test="$Modality"
			  refValue="CT" />
		</or>
	</condition>
	<action>
		<lossless-compress
		  time="2"
		  unit="years"
		  refValue="$StudyDate"/>
	</action>
</rule>