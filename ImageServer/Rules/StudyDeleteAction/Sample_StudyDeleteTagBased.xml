<!-- this rule deletes the MR study 10 weeks from today -->
<rule>
	<condition
	  expressionLanguage="dicom">
		<and>
			<equal
			  test="$Modality"
			  refValue="MR" />
			<regex
			  test="$PatientId"
			  pattern="1" />
		</and>
	</condition>
	<action>
		<study-delete
		  time="10"
		  unit="weeks" />
	</action>
</rule>