<!-- 
This rule instructs the server to use JPEG 2000 Lossy compression
on DX and CR studies.
-->
<rule>
	<condition
	  expressionLanguage="dicom">		
			<or>
				<equal
				  test="$Modality"
				  refValue="DX" />
				<equal
				  test="$Modality"
				  refValue="CR" />
			</or>
	</condition>
	<action>
		<jpeg-2000-lossy/>
	</action>
</rule>