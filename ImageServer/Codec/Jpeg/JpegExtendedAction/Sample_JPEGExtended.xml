<!-- 
This rule instructs the server to use JPEG extended compression
on CT and MR studies.
-->
<rule>
	<condition
	  expressionLanguage="dicom">
			<or>
				<equal
				  test="$Modality"
				  refValue="CT" />
				<equal
				  test="$Modality"
				  refValue="MR" />
			</or>
	</condition>
	<action>
		<jpeg-extended />
	</action>
</rule>