<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ClearCanvas.Healthcare" namespace="ClearCanvas.Healthcare">
  <class name="Patient" proxy="Patient" table="Patient_">
    <id name="OID" column="OID_" type="Guid">
      <generator class="guid.comb"/>
    </id>
    <version name="Version" column="Version_"/>

    <set name="Profiles" lazy="true" inverse="true" cascade="all-delete-orphan" access="nosetter.camelcase-underscore">
      <key column="PatientOID_"/>
      <one-to-many class="PatientProfile"/>
    </set>

    <idbag name="Attachments" table="PatientAttachment_" lazy="true" access="nosetter.camelcase-underscore">
      <collection-id column="OID_" type="Guid">
        <generator class="guid.comb"/>
      </collection-id>
      <key column="PatientOID_"/>
      <composite-element class="PatientAttachment">
        <many-to-one name="Category" column="Category_" class="PatientAttachmentCategoryEnum"/>
        <many-to-one name="Document" column="MimeDocumentOID_" class="MimeDocument" not-null="true" cascade="all" fetch="join"/>
      </composite-element>
    </idbag>

    <idbag name="Notes" table="PatientNote_" lazy="true" access="nosetter.camelcase-underscore">
      <collection-id column="OID_" type="Guid">
        <generator class="guid.comb"/>
      </collection-id>
      <key column="PatientOID_"/>
      <composite-element class="PatientNote">
        <property name="Comment" column="Comment_" type="String" length ="1024"/>
        <property name="CreationTime" column="CreationTime_" type="DateTime" not-null="true"/>
        <property name="ValidRange" type="ClearCanvas.Healthcare.Hibernate.DateTimeRangeHbm, ClearCanvas.Healthcare.Hibernate">
          <column name="ValidFrom_"/>
          <column name="ValidUntil_"/>
        </property>
        <many-to-one name="Author" class="Staff" column="Author_" not-null="true" fetch="join"/>
        <many-to-one name="Category" class="PatientNoteCategory" column="CategoryOID_" fetch="join"/>
      </composite-element>
    </idbag>

  </class>
</hibernate-mapping>
