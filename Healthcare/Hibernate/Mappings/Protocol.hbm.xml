<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ClearCanvas.Healthcare" namespace="ClearCanvas.Healthcare">
  <class name="Protocol" proxy="Protocol" table="Protocol_">
    <id name="OID" column="OID_" type="Guid">
      <generator class="guid.comb"/>
    </id>
    <version name="Version" column="Version_"/>

    <!-- one-to-one enforced by unique constraint -->
    <many-to-one name="Procedure" class="Procedure" column="ProcedureOID_" not-null="true" unique="true"/>

    <many-to-one name="Author" class="Staff" column="AuthorOID_"/>
    <property name="Status" column="Status_" type="ClearCanvas.Healthcare.Hibernate.ProtocolStatusEnumHbm, ClearCanvas.Healthcare.Hibernate" not-null="true"/>
    <many-to-one name="SuspendRejectReason" class="ProtocolSuspendRejectReasonEnum" column="SuspendRejectReason_"/>

    <list name="Notes" table="ProtocolNotes_" lazy="true" access="nosetter.camelcase-underscore">
      <key column="ProtocolOID_"/>
      <index column="Index_"/>
      <composite-element class="ProtocolNote">
        <property name="Text" column="Text_" type="String" length ="1024"/>
        <property name="TimeStamp" column="TimeStamp_" type="DateTime" not-null="true"/>
        <many-to-one name="Author" class="Staff" column="CreatedBy_" not-null="true" fetch="join"/>
      </composite-element>
    </list>

    <set name="Codes" table="ProtocolProtocolCodes_" lazy="true" access="nosetter.camelcase-underscore">
      <key column="ProtocolOID_"/>
      <many-to-many column="ProtocolCodeOID_" class="ClearCanvas.Healthcare.ProtocolCode, ClearCanvas.Healthcare" fetch="join"/>
    </set>
  </class>
</hibernate-mapping>
