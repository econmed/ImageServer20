<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ClearCanvas.Healthcare" namespace="ClearCanvas.Healthcare">
  <class name="PatientAttachment" proxy="PatientAttachment" table="PatientAttachment_">
    <id name="OID" column="OID_" type="Guid">
      <generator class="guid.comb"/>
    </id>
    <version name="Version" column="Version_"/>

    <many-to-one name="Patient" column="PatientOID_" class="Patient" not-null="true" fetch="join"/>

    <many-to-one name="Category" column="Category_" class="PatientAttachmentCategoryEnum"/>
    
    <!-- one-to-one mapping with document -->
    <many-to-one name="Document" column="MimeDocumentOID_" class="MimeDocument" not-null="true" cascade="all" unique="true" fetch="join"/>

  </class>
</hibernate-mapping>
