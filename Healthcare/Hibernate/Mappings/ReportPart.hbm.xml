<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ClearCanvas.Healthcare" namespace="ClearCanvas.Healthcare">
  <class name="ReportPart" proxy="ReportPart" table="ReportPart_">
    <id name="OID" column="OID_" type="Guid">
      <generator class="guid.comb"/>
    </id>
    <version name="Version" column="Version_"/>

    <property name="Index" column="Index_" type="int" not-null="true"/>
    <property name="Content" column="Content_" type="StringClob" length="65000" not-null="false"/>

    <property name="Status" column="Status_" type="ClearCanvas.Healthcare.Hibernate.ReportPartStatusEnumHbm, ClearCanvas.Healthcare.Hibernate" not-null="true"/>

    <many-to-one name="Supervisor" class="Staff" column="SupervisorOID_"/>
    <many-to-one name="Interpreter" class="Staff" column="InterpreterOID_"/>
    <many-to-one name="Transcriber" class="Staff" column="TranscriberOID_"/>
    <many-to-one name="Verifier" class="Staff" column="VerifierOID_"/>

    <many-to-one name="Report" class="Report" column="ReportOID_" not-null="true" fetch="join"/>
  </class>
</hibernate-mapping>
