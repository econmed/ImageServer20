<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ClearCanvas.Healthcare" namespace="ClearCanvas.Healthcare">
  <class name="Staff" table="Staff_">
    <cache usage="nonstrict-read-write"/>
    <id name="OID" column="OID_" type="Guid">
      <generator class="guid.comb"/>
    </id>
    <version name="Version" column="Version_"/>
    <property name="Id" column="Id_" type="String" length="30" not-null="true" unique="true"/>
    <component name="Name" class="PersonName">
      <property name="FamilyName" column="FamilyName_" type="String" length="40" not-null="true"/>
      <property name="GivenName" column="GivenName_" type="String" length="40" not-null="true"/>
      <property name="MiddleName" column="MiddleName_" type="String" length="40" not-null="false"/>
      <property name="Prefix" column="Prefix_" type="String" length="10" not-null="false"/>
      <property name="Suffix" column="Suffix_" type="String" length="10" not-null="false"/>
      <property name="Degree" column="Degree_" type="String" length="10" not-null="false"/>
    </component>
    <property name="Type" column="Type_" type="ClearCanvas.Healthcare.Hibernate.StaffTypeEnumHbm, ClearCanvas.Healthcare.Hibernate" not-null="true"/>

    <!-- This property associates the staff with a User entity - may be null if the Staff is not associated with a user
         Technically it should be a one-to-one mapping (e.g it should enforce that a Staff maps to at most one user and vice-versa.
         However, this cannot be achieved at the database-level, as we must allow for the possibility of nulls
    -->
    <many-to-one name="User" class="ClearCanvas.Enterprise.Authentication.User, ClearCanvas.Enterprise.Authentication" column="UserOID_" not-null="false"/>
  </class>
</hibernate-mapping>
