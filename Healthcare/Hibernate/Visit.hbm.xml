<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0" assembly="ClearCanvas.Healthcare" namespace="ClearCanvas.Healthcare">
  <class name="Visit" proxy="Visit" table="Visit_">
    <id name="OID" column="OID_" type="Int64">
      <generator class="hilo">
        <param name="max_lo">100</param>
      </generator>
    </id>
    <version name="Version" column="Version_"/>
    <many-to-one name="Patient" class="Patient" column="PatientOID_" not-null="true"/>
    <component name="VisitNumber" class="CompositeIdentifier">
      <property name ="Id" column="VisitNumberId_" type="String" length="30" not-null="true"/>
      <property name="AssigningAuthority" column="VisitNumberAssigningAuthority_" type="String" length="100" not-null="true"/>
    </component>
    <property name="PatientClass" column="PatientClass_" type="ClearCanvas.Healthcare.Hibernate.PatientClassEnumHbm, ClearCanvas.Healthcare.Hibernate" not-null="true"/>
    
    <idbag name="Locations" lazy="true" table="VisitLocation_" access="nosetter.camelcase-underscore">
      <collection-id column="OID_" type="Int64">
        <generator class="hilo">
          <param name="max_lo">100</param>
        </generator>
      </collection-id>
      <key column="VisitOID_"/>
      <composite-element class="VisitLocation">
        <many-to-one name="Location" class="Location" column="LocationOID_" not-null="true" fetch="join"/>
        <property name="Role" column="Role_" type="ClearCanvas.Healthcare.Hibernate.VisitLocationRoleEnumHbm, ClearCanvas.Healthcare.Hibernate" not-null="true"/>
        <property name="StartTime" column="StartTime_" type="DateTime" not-null="false"/>
        <property name="EndTime" column="EndTime_" type="DateTime" not-null="false"/>
      </composite-element>
    </idbag>

    <idbag name="Practitioners" lazy="true" table="VisitPractitioner_" access="nosetter.camelcase-underscore">
      <collection-id column="OID_" type="Int64">
        <generator class="hilo">
          <param name="max_lo">100</param>
        </generator>
      </collection-id>
      <key column="VisitOID_"/>
      <composite-element class="VisitPractitioner">
        <many-to-one name="Practitioner" class="Practitioner" column="PractitionerOID_" not-null="true" fetch="join"/>
        <property name="Role" column="Role_" type="ClearCanvas.Healthcare.Hibernate.VisitPractitionerRoleEnumHbm, ClearCanvas.Healthcare.Hibernate" not-null="true"/>
        <property name="StartTime" column="StartTime_" type="DateTime" not-null="false"/>
        <property name="EndTime" column="EndTime_" type="DateTime" not-null="false"/>
      </composite-element>
    </idbag>


  </class>
</hibernate-mapping>
