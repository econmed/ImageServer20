<?xml version="1.0" encoding="utf-8" ?>
<specifications>

  <spec id="LastName">
    <not-null test="$.Name.FamilyName" failMessage="family name is missing"/>
  </spec>

  <spec id="FirstName">
    <not-null test="$.Name.GivenName" failMessage="given name is missing"/>
  </spec>

  <spec id="Healthcard">
    <not-null test="$.Healthcard" failMessage="healthcard info is missing"/>
    <not-null test="$.Healthcard.Id" failMessage="healthcard ID is missing"/>
    <not-null test="$.Healthcard.AssigningAuthority" failMessage="healthcard assigning authority is missing"/>
  </spec>

  <spec id="Addresses">
    <any test="$.Addresses" failMessage="a residential address is missing">
      <true test="$.Type.ToString() == 'R'"/>
    </any>
  </spec>

  <spec id="TelephoneNumbers">
    <any test="$.TelephoneNumbers" failMessage="a residential telephone number is missing">
      <true test="$.Equipment.ToString() == 'PH'"/>
      <true test="$.Use.ToString() == 'PRN'"/>
    </any>
  </spec>

</specifications>
